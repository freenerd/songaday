<ul class="songlist">
  <% @songs.each_pair do |index, song| %>
    <% if song %>
      <li class="song">
        <div class="content">
          <p class="order-number"><%= index %></p>
          <p class="sc-url"><%= song.soundcloud_url %></p>
          <div class="sc-widget"></div>
          <div class="song-info">
            <p><%= link_to "#{song.artist} - #{song.title}", edit_song_path(song) %></p>
          </div>
        </div>
      </li>
    <% else %>
      <li class="empty">
        <div class="content">
          <p class="order-number"><%= index %></p>
        </div>
        <div class="action">
          <p><%= link_to 'Add Song', new_song_path(:order_number => index) %></p>
        </div>
      </li>
    <% end %>
  <% end %>
</ul>
